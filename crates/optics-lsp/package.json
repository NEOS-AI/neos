{
  "name": "Optics",
  "version": "0.0.12",
  "engines": {
    "vscode": "^1.73.0"
  },
  "publisher": "Stract",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "just build && tsc -b",
    "package": "vsce package --githubBranch main --out optic.vsix",
    "publish": "vsce publish --githubBranch main --packagePath optic.vsix"
  },
  "main": "out/extension",
  "activationEvents": [
    "onLanguage:optic"
  ],
  "dependencies": {
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0"
  },
  "devDependencies": {
    "typescript": "^4.9.5",
    "@types/node": "^17.0.35",
    "@types/vscode": "^1.63.0",
    "vsce": "^2.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/StractOrg/stract"
  },
  "icon": "optics_logo.png",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "optic",
        "aliases": [
          "Optic",
          "optic",
          "Optics",
          "optics"
        ],
        "extensions": [
          ".optic"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "optic",
        "scopeName": "source.optic",
        "path": "./optic.tmLanguage.json"
      }
    ]
  }
}
